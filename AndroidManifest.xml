<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ir.khabarefori"
          android:versionCode="1"
          android:versionName="1.0"
          android:installLocation="internalOnly">
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk android:minSdkVersion="19"/>

    <application android:label="@string/app_name" android:icon="@drawable/logo_circle" android:debuggable="true">
        <activity android:name="MyActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver android:name="ir.khabarefori.widget.WidgetActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="ir.khabarefori.layout.widget.txtNews"/>
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/widget_provider"/>
        </receiver>
    </application>
</manifest>
