<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:background="#e6400603"
              android:padding="10dp"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="خوش آمدید"
            android:textColor="#ccf4877e"
            android:shadowColor="#ff1c1206"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:id="@+id/textView" android:layout_gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginRight="10dp"
                android:text="با نرم افزار خبرفوری می توانید از آخرین رویداد ها با خبر باشید، برای آشنایی بیشتر نکات زیر را مطالعه کنید"
                android:id="@+id/textView3" android:gravity="center" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="آخرین اخبار"
                android:id="@+id/textView4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="نرم افزار به صورت خودکار هر ۱۰ دقیقه بروز می شود"
                android:id="@+id/textView5"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                  android:paddingBottom="15dp"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="متن خبر"
                  android:id="@+id/textView6"
                  android:layout_gravity="right"
                  android:gravity="right"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginRight="10dp"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:id="@+id/textView7"
                  android:text="اخبار به صورت چکیده می باشند،با کلیک برروی متن خبر،متن کامل آن نمایش داده می شود"
                  android:layout_gravity="right"
                  android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                  android:paddingBottom="15dp"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout2"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="منبع خبر"
                  android:id="@+id/textView8" android:singleLine="false"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:gravity="right"
                  android:layout_marginRight="10dp"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="برای دسترسی به منبع اصلی خبر، باکلیک بر رویمتن دکمه منبع خبر ظاهر می شود"
                  android:id="@+id/textView9"/>
    </LinearLayout>

    <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:layout_marginRight="10dp"
            android:text="باشه"
            android:textColor="#ffffffff"
            android:background="@drawable/tutorial_button"
            android:layout_gravity="center_horizontal|right"

            android:id="@+id/btnOK"/>

</LinearLayout>